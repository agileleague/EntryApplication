<div class="form-horizontal">
<%= nested_form_for @benthic_cover do |f| %>
  <%= render "shared/error_messages", :target => @benthic_cover%>


    <div class="formContainer">
      <div class="row">
        <div class="span4 part_1">

        <div class="control-group">
          <label class="control-label">Diver</label>
          <div class="controls">
            <%= f.collection_select :diver_id, Diver.all, :id, :diver_name, { :include_blank => "" }%><br />
          </div>
        </div>
         
        <div class="control-group">
          <label class="control-label">Buddy</label>
          <div class="controls">
            <%= f.collection_select :buddy, Diver.all, :id, :diver_name, { :include_blank => "" }%><br />
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">Field ID</label>
          <div class="controls">
            <%= f.text_field :field_id %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">Sample Date</label>
          <div class="controls">
            <%= f.text_field :sample_date %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label">Sample Begin Time</label>
          <div class="controls">
            <%= f.text_field :sample_begin_time %>
          </div>
        </div>

        </div> 
        <div class="span4 part_2">

        <div class="control-group">
          <label class="control-label">Habitat Type</label>
          <div class="controls">
            <%= f.collection_select :habitat_type_id, HabitatType.all, :id, :habitat_name, { :include_blank => "" } %><br />
          </div>
        </div>


        <div class="control-group">
          <label class="control-label">Meters Completed</label>
          <div class="controls">
            <%= f.text_field :meters_completed %>
          </div>
        </div>

         <div class="control-group">
          <label class="control-label">Notes</label>
          <div class="controls">
            <%= f.text_area :sample_description, { :size => "60x3" } %>
          </div>
        </div> 

      </div>
      </div>

  <div class="row">
    <div class="span6">
      <fieldset>
        <legend> Cover Points </legend>
          <%= f.fields_for :point_intercepts do |builder| %>
            <%= render 'point_intercept_fields', f: builder %>
          <% end %>
          <%= f.link_to_add "Add Cover", :point_intercepts %>
      </fieldset>
    </div>

    <div class=span3>
      <%= f.fields_for :invert_belts do |builder| %>
        <%= render 'invert_belt_fields', f: builder %>
      <% end %>

      <%= f.fields_for :presence_belts do |builder| %>
        <%= render 'presence_belt_fields', f: builder %>
      <% end %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
</div>
</div>
