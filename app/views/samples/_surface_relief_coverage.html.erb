  <fieldset>
    <legend> Surface Relief Coverage % </legend>
    <table id="surfaceReliefTable">
      <tr>
        <th>  </th>
        <th> Hard </th>
        <th> Soft </th>
      </tr>
      <tr>
        <td> <%= object.label(:name, "< 0.2m") %>         </td>
        <td> <%= object.text_field :hard_relief_cat_0, { :class => "hard_relief", :autocomplete => :off } %>  </td>
        <td> <%= object.text_field :soft_relief_cat_0, { :class => "soft_relief", :autocomplete => :off } %>  </td>
      </tr>
      <tr>
        <td> <%= object.label(:name, "0.2 - 0.5m") %>     </td>
        <td> <%= object.text_field :hard_relief_cat_1, { :class => "hard_relief", :autocomplete => :off } %>  </td>
        <td> <%= object.text_field :soft_relief_cat_1, { :class => "soft_relief", :autocomplete => :off } %>  </td>
      </tr>
      <tr>
        <td> <%= object.label(:name, "0.5 - 1.0m") %>     </td>
        <td> <%= object.text_field :hard_relief_cat_2, { :class => "hard_relief", :autocomplete => :off } %>  </td>
        <td> <%= object.text_field :soft_relief_cat_2, { :class => "soft_relief", :autocomplete => :off } %>  </td>
      </tr>
      <tr>
        <td> <%= object.label(:name, "1.0 - 1.5m") %>     </td>
        <td> <%= object.text_field :hard_relief_cat_3, { :class => "hard_relief", :autocomplete => :off } %>  </td>
        <td> <%= object.text_field :soft_relief_cat_3, { :class => "soft_relief", :autocomplete => :off } %>  </td>
      </tr>
      <tr>
        <td> <%= object.label(:name, "> 1.5m") %>         </td>
        <td> <%= object.text_field :hard_relief_cat_4, { :class => "hard_relief", :autocomplete => :off } %>  </td>
        <td> <%= object.text_field :soft_relief_cat_4, { :class => "soft_relief", :autocomplete => :off } %>  </td>
      </tr>
      <tr>
        <td> <%= label(:name, "Total") %></td>
        <td> <%= text_field_tag "hard_relief_total", "0", :disabled => true %> </td>
        <td> <%= text_field_tag "soft_relief_total", "0", :disabled => true %> </td>
      </tr>
    </table>
  </fieldset>
