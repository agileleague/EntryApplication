<%= nested_form_for @sample do |f| %>
  <% if @sample.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sample.errors.count, "error") %> prohibited this sample from being saved:</h2>

      <ul>
      <% @sample.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class='formContainer'>
  <div class='section_1'>
    <div id='section_1_part_1'>
      <%= f.label "Date" %>
      <%= f.date_select :sample_date %>
        
      <%= render "diver_selection", :object => f %>


      <%= f.label "Sample Type" %>
      <%= f.collection_select :sample_type_id, SampleType.all, :id, :sample_type_name, { :include_blank => "" } %><br />

      <%= f.label "Habitat Type" %>
      <%= f.collection_select :habitat_type_id, HabitatType.all, :id, :habitat_name, { :include_blank => "" } %><br />

      <%= f.label "Dive Begin Time" %>
      <%= f.time_select :dive_begin_time, { :include_blank => "" } %><br />

      <%= f.label "Dive End Time" %>
      <%= f.time_select :dive_end_time, { :include_blank => "" } %><br />

      <%= f.label "Sample Begin Time" %>
      <%= f.time_select :sample_begin_time, { :include_blank => "" } %><br />
      
      <%= f.label "Sample End Time" %>
      <%= f.time_select :sample_end_time, { :include_blank => "" } %><br />
    </div>
    <div id='section_1_part_2'>
      <%= f.label "Max Dive Depth" %>
      <%= f.text_field :dive_depth %><br />

      <%= f.label "Station Depth" %>
      <%= f.text_field :sample_depth %><br />

      <%= f.label "Fishing gear" %>
      <%= f.text_field :fishing_gear %><br />

      <%= f.label "Field Number" %>
      <%= f.text_field :field_id %><br />

      <%= f.label "Underwater Visibility" %>
      <%= f.text_field :underwater_visibility %><br />

      <%= f.label "Comments" %>
      <%= f.text_area :sample_description, { :size => '60x3' } %><br />
    </div>
  </div>
  <p class="flip">Validate Section 1</p>
  <div class='section_2'>
    <div id='section_2_part_1'>
      <h3>Substrate Slope</h3>
         <%= f.label "Max Substrate Depth" %>
         <%= f.text_field :substrate_max_depth %><br />

         <%= f.label "Min Substrate Depth" %>
         <%= f.text_field :substrate_min_depth %><br />
         <h3>Max Verticle Relief</h3>
         <%= f.label "Hard Substrate" %>
         <%= f.text_field :hard_verticle_relief %><br />

         <%= f.label "Soft Substrate" %>
         <%= f.text_field :soft_verticle_relief %><br />
  
          
  </div>

  <div id='section_3'>
    <%#= render "animals", :object => f %>
    
    <p> <%#= f.link_to_add "Add species", :sample_animals %></p>
  </div>

</div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
