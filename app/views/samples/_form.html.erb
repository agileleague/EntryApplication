<%= nested_form_for @sample, :validate => false do |f| %>

  <%= render "shared/error_messages", :target => @sample %>

<select class="changeSection">
  <option value="sampleSection">Sample Section</option>
  <option value="substrateSection">Substrate Section</option>
  <option value="speciesSection">Species Section</option>
</select>
<div class='formContainer'>
  <div id="sampleSection" class="sectionDiv">
  <div class='section_1'>
    <div id='section_1_part_1'>
      <%= f.label "Date" %>
      <%= f.date_select :sample_date, { :class => 'tab_1', :name => 'date' } %>
        
      <%= render "diver_selection", :object => f %>


      <%= f.label "Sample Type" %>
      <%= f.collection_select :sample_type_id, SampleType.all, :id, :sample_type_name, { :include_blank => "" }, { :class => 'tab_1' } %><br />

      <%= f.label "Habitat Type" %>
      <%= f.collection_select :habitat_type_id, HabitatType.all, :id, :habitat_name, { :include_blank => "" }, { :class => 'tab_1' } %><br />

      <%= f.label "Dive Begin Time" %>
      <%= f.text_field :dive_begin_time, { :class => 'tab_1' } %><br />

      <%= f.label "Dive End Time" %>
      <%= f.text_field :dive_end_time, { :class => 'tab_1' } %><br />

      <%= f.label "Sample Begin Time" %>
      <%= f.text_field :sample_begin_time, { :class => 'tab_1' } %><br />
      
      <%= f.label "Sample End Time" %>
      <%= f.text_field :sample_end_time, { :class => 'tab_1' } %><br />
    </div>
    <div id='section_1_part_2'>

      <%= f.label "Field Number" %>
      <%= f.text_field :field_id, { :class => 'tab_1', :autocomplete => :off, :validate => true } %><br />

      <%= f.label "Max Dive Depth" %>
      <%= f.text_field :dive_depth, { :class => 'tab_1', :autocomplete => :off } %><br />

      <%= f.label "Station Depth" %>
      <%= f.text_field :sample_depth, { :class => 'tab_1', :autocomplete => :off } %><br />

      <%= f.label "Underwater Visibility" %>
      <%= f.text_field :underwater_visibility, { :class => 'tab_1', :autocomplete => :off } %><br />
      
      <%= f.label "Water temperature" %>
      <%= f.text_field :water_temp, { :class => 'tab_1', :autocomplete => :off } %><br />

      <%= f.label "Cylinder radius" %>
      <%= f.select( :cylinder_radius,{ "7.5m" => 7.5, "5.0m" => 5.0 } , {}, { :class => 'tab_1' } ) %><br />
      
      <%= f.label "Current" %>
      <%= f.select( :current, { "None" => "none", "Moderate" => "moderate", "Strong" => "strong" }, {}, { :class => 'tab_1' } ) %><br />

      <%= f.label "Fishing gear" %>
      <%= f.select :fishing_gear, { "None" => "none", "Trap" => "trap", "Trap Debris" => "trap debris", "Fishing" => "fishing", "Other" => "other" } %><br />

      <%= f.label "Comments" %>
      <%= f.text_area :sample_description, { :size => '60x3', :autocomplete => :off } %><br />
    </div>
  </div>
</div>
<div id="substrateSection" class="sectionDiv">
  <div class='section_2'>
    <div id='section_2_part_1'>
      <fieldset>
        <legend> Substrate Slope </legend>
          <%= f.label "Max Substrate Depth" %>
          <%= f.text_field :substrate_max_depth, {:class => "tab_2", :autocomplete => :off } %><br />

          <%= f.label "Min Substrate Depth" %>
          <%= f.text_field :substrate_min_depth, {:class => "tab_2", :autocomplete => :off } %><br />
        </fieldset>
        <fieldset>
          <legend> Max Verticle Relief </legend>
          <%= f.label "Hard Substrate" %>
          <%= f.text_field :hard_verticle_relief, {:class => "tab_2", :autocomplete => :off } %><br />

          <%= f.label "Soft Substrate" %>
          <%= f.text_field :soft_verticle_relief, {:class => "tab_2", :autocomplete => :off } %><br />
        </fieldset>
      
      <%= render "surface_relief_coverage", :object => f %>
    </div>
    <div id='section_2_part_2'>
      <%= render "abiotic_footprint", :object => f %>
    </div>
    <div id='section_2_part_3'>
      <%= render "biotic_cover_sand", :object => f %>
    </div>
    <div id='section_2_part_4'>
      <%= render "biotic_cover_hardbottom", :object => f %>
    </div>
  </div>
</div>

<div id="speciesSection" class="sectionDiv">
  <div class='section_3'>
    <div id="fixedElements">
    <div>
      <Input class='time_seen_button' type='radio' Name='timeSeen' Value='1' checked='checked'>First 5 Minutes
      <Input class='time_seen_button' type='radio' Name='timeSeen' Value='2'>5 to 10 Minutes
      <Input class='time_seen_button' type='radio' Name='timeSeen' Value='3'>After 10 Minutes
    <div>
    <div>
      <label id="species"> Species </label> <label id="num"> Num </label> <label id="mean"> Mean </label> <label id="min"> Min </label> <label id="max"> Max </label>
     </div>
  </div>
    
    <div id="animals">
    <ol>   
      <%= render "animals", :object => f %>
      
      <%= f.link_to_add "Add species", :sample_animals %>
    </ol>
    </div>
  </div>
</div>

</div>
 
  <div class="actions">
    <%= f.submit "Submit Sample", :id => "submitButton" %>
  </div>
<% end %>
